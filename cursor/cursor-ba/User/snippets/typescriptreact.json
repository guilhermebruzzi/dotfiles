	"Create Counter Context Example": {
		"prefix": "reactContextExample",
		"body": [
			"import {",
			"  createContext,",
			"  FC,",
			"  useCallback,",
			"  useContext,",
			"  useMemo,",
			"  useState,",
			"} from \"react\";",
			"",
			"const initialState: State = { count: 0 };",
			"",
			"type State = {",
			"  count: number;",
			"};",
			"",
			"type CounterContextType = State & {",
			"  incCount: VoidFunction;",
			"  decCount: VoidFunction;",
			"};",
			"",
			"const CounterContext = createContext<CounterContextType | null>(null);",
			"",
			"const useCounterState = () => {",
			"  const [state, setState] = useState<State>(initialState);",
			"",
			"  const incCount = useCallback(() => {",
			"    setState(({ count }) => ({",
			"      count: count + 1,",
			"    }));",
			"  }, [setState]);",
			"",
			"  const decCount = useCallback(() => {",
			"    setState(({ count }) => ({",
			"      count: count - 1,",
			"    }));",
			"  }, [setState]);",
			"",
			"  const value = useMemo(",
			"    () => ({ ...state, incCount, decCount }),",
			"    [state, incCount, decCount]",
			"  );",
			"",
			"  return value;",
			"};",
			"",
			"export const CounterProvider: FC = ({ children }) => {",
			"  const value = useCounterState();",
			"",
			"  return (",
			"    <CounterContext.Provider value={value}>{children}</CounterContext.Provider>",
			"  );",
			"};",
			"",
			"export const useCounter = () => {",
			"  const value = useContext(CounterContext);",
			"",
			"  if (!value) {",
			"    throw new Error(\"Make sure <CounterProvider> is on your react tree\");",
			"  }",
			"",
			"  return value;",
			"};",
			""
		]
	},
	"Create Counter Context With Reducer Example": {
		"prefix": "reactContextWithReducerExample",
		"body": [
			"import { createContext, FC, useContext, useMemo, useReducer } from \"react\";",
			"",
			"const initialState: State = { count: 0 };",
			"",
			"type State = {",
			"  count: number;",
			"};",
			"",
			"type Action = { type: \"inc\" } | { type: \"dec\" };",
			"",
			"type CounterContextType = State & { dispatch: React.Dispatch<Action> };",
			"",
			"const CounterContext = createContext<CounterContextType | null>(null);",
			"",
			"function countReducer(state: State, action: Action) {",
			"  switch (action.type) {",
			"    case \"inc\":",
			"      return { count: state.count + 1 };",
			"    case \"dec\":",
			"      return { count: state.count - 1 };",
			"    default:",
			"      throw new Error(\"Action not implemented\");",
			"  }",
			"}",
			"",
			"const useCounterState = () => {",
			"  const [state, dispatch] = useReducer(countReducer, initialState);",
			"",
			"  const value = useMemo(() => ({ ...state, dispatch }), [state, dispatch]);",
			"",
			"  return value;",
			"};",
			"",
			"export const CounterProviderWithReducer: FC = ({ children }) => {",
			"  const value = useCounterState();",
			"",
			"  return (",
			"    <CounterContext.Provider value={value}>{children}</CounterContext.Provider>",
			"  );",
			"};",
			"",
			"export const useCounterWithReducer = () => {",
			"  const value = useContext(CounterContext);",
			"",
			"  if (!value) {",
			"    throw new Error(\"Make sure <CounterProvider> is on your react tree\");",
			"  }",
			"",
			"  return value;",
			"};",
			""
		]
	},
