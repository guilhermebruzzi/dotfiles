	"Animations": {
		"prefix": "createAnimations",
		"body": [
			"yarn add react-spring",
			"",
			"import React from 'react'",
			"import type { FC } from 'react'",
			"import { useSpring, animated } from 'react-spring'",
			"",
			"export const AnimatedDiv: FC = () => {",
			"  const props = useSpring({ to: { opacity: 1 }, from: { opacity: 0 } });",
			"  return <animated.div style={props}>I will fade in</animated.div>;",
			"}",
			"",
			"transform: () => (open ? 'translateX(0)' : 'translateX(100%)')",
			"transition: 'transform 0.3s ease-in-out'",
			"import { FC, useEffect, useRef, useState } from \"react\";",
			"import styled from \"styled-components\";",
			"",
			"interface AnimatedDivProps {",
			"  visible?: boolean;",
			"}",
			"",
			"const DURATION = \"2s\";",
			"",
			"const TranslationDiv = styled.div<{ visible: boolean }>`",
			"  opacity: ${(props) => (props.visible ? 1 : 0)};",
			"  transition: opacity ${DURATION} ease-in-out;",
			"`;",
			"",
			"export const AnimatedTranslationDiv: FC<AnimatedDivProps> = ({",
			"  visible = true,",
			"  children,",
			"}) => {",
			"  const [show, setShow] = useState(false);",
			"  const [showElement, setShowElement] = useState(true);",
			"  const divRef = useRef<HTMLDivElement | null>(null);",
			"",
			"  useEffect(() => {",
			"    setShow(visible);",
			"  }, [visible]);",
			"",
			"  useEffect(() => {",
			"    const onTransitionEnd = () => {",
			"      setShowElement(false);",
			"    };",
			"",
			"    const currentDivRef = divRef.current;",
			"",
			"    if (currentDivRef && !show) {",
			"      currentDivRef.addEventListener(\"transitionend\", onTransitionEnd);",
			"    }",
			"",
			"    return () => {",
			"      if (currentDivRef) {",
			"        currentDivRef.removeEventListener(\"transitionend\", onTransitionEnd);",
			"      }",
			"    };",
			"  }, [show]);",
			"",
			"  return (",
			"    <TranslationDiv visible={show} ref={divRef}>",
			"      {showElement && children}",
			"    </TranslationDiv>",
			"  );",
			"};"
		]
	},
