	"Create fetch graphql": {
		"prefix": "createFetchGraphql",
		"body": [
			"async function fetchGraphQL(text: string, variables?: Record<string, string>) {",
			"  const REACT_APP_GITHUB_AUTH_TOKEN = process.env.REACT_APP_GITHUB_AUTH_TOKEN;",
			"",
			"  // Fetch data from GitHub's GraphQL API:",
			"  const response = await fetch(\"https://api.github.com/graphql\", {",
			"    method: \"POST\",",
			"    headers: {",
			"      Authorization: `bearer ${REACT_APP_GITHUB_AUTH_TOKEN}`,",
			"      \"Content-Type\": \"application/json\",",
			"    },",
			"    body: JSON.stringify({",
			"      query: text,",
			"      variables,",
			"    }),",
			"  });",
			"",
			"  // Get the response as JSON",
			"  return await response.json();",
			"}",
			"",
			"export default fetchGraphQL;",
			""
		]
	},
	"Create useQuery": {
		"prefix": "createUseQuery",
		"body": [
			"import { request } from \"graphql-request\";",
			"import type { Variables } from \"graphql-request\";",
			"import useSWR, { SWRConfiguration } from \"swr\";",
			"",
			"const fetcher =",
			"  <ReturnType extends any>(variables: Variables) =>",
			"  (query: string) =>",
			"    request<ReturnType>(\"http://localhost:3030/api/graphql\", query, variables);",
			"",
			"export const useQuery = <ReturnType = any, QueryVariables = Variables>(",
			"  query: string,",
			"  variables: QueryVariables,",
			"  options?: SWRConfiguration",
			") => {",
			"  return useSWR<ReturnType, any[]>(query, {",
			"    fetcher: fetcher<ReturnType>(variables),",
			"    ...options,",
			"  });",
			"};",
			""
		]
	},
	"Create usePostsQuery Example": {
		"prefix": "createUsePostsQueryExample",
		"body": [
			"import { gql, Variables } from \"graphql-request\";",
			"import { useMemo } from \"react\";",
			"import { useQuery } from \"./useQuery\";",
			"",
			"const query = gql`",
			"  query allPosts($page: Int, $perPage: Int, $sortField: String) {",
			"    allPosts(page: $page, perPage: $perPage, sortField: $sortField) {",
			"      id",
			"      title",
			"      views",
			"      User {",
			"        name",
			"      }",
			"      Comments {",
			"        date",
			"        body",
			"      }",
			"    }",
			"  }",
			"`;",
			"",
			"const queryVariables: Variables = {",
			"  page: 0,",
			"  perPage: 10,",
			"  sortField: \"title\",",
			"};",
			"",
			"type Post = {",
			"  id: string;",
			"  title: string;",
			"  views: number;",
			"  User: {",
			"    name: string;",
			"  };",
			"  Comments: {",
			"    date: string;",
			"    body: string;",
			"  };",
			"};",
			"",
			"export const usePostsQuery = () => {",
			"  const { data, error } = useQuery<{ allPosts: Post[] }>(query, queryVariables);",
			"",
			"  const values = useMemo(",
			"    () => ({",
			"      data,",
			"      error,",
			"      isLoading: !data && !error,",
			"    }),",
			"    [data, error]",
			"  );",
			"",
			"  return values;",
			"};",
			""
		]
	},
